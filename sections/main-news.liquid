{{ 'section-main-blog.css' | asset_url | stylesheet_tag }}

{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }

  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}

<div class="main-blog page-width section-{{ section.id }}-padding" style="max-width:1184px;margin:100px auto 0; padding: 0 16px;">

  <h1 class="title--primary" style="font-size: 40px; font-weight:700; text-align:center; ">{{ section.settings.title }}</h1>

  {%- assign news_blog = blogs['news'] -%}

  {%- if news_blog.articles_count > 0 -%}
    <div class="articles-list" style="max-width:720px; margin: 0 auto; padding-top:40px; display:flex;flex-direction:column;font-size: 16px;">
      {%- for article in news_blog.articles -%}
        <div class="article-item" style="
              display:flex;
              align-items:center;
              padding:16px 0;
              border-top: {%- if forloop.first -%}1px solid #292929{%- else -%}none{%- endif -%};
              border-bottom:1px solid #292929;
            ">

          <!-- 日付 -->
          <div class="article-date" style="flex:0 0 140px;color:#666;">
            {{ article.published_at | date: "%Y年%m月%d日" }}
          </div>

          <!-- タイトル -->
          <div class="article-title" style="flex:1;">
            <a href="{{ article.url }}" style="text-decoration:none;color:#111;">
              {{ article.title }}
            </a>
          </div>

        </div>
      {%- endfor -%}
    </div>
  {%- else -%}
    <p>現在お知らせ記事はありません。</p>
  {%- endif -%}

  <!-- ボタン -->
  <div class="top-fv__btnArea" style="margin-top:60px;">
    {% if section.settings.button != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" class="c-btn" >
        {{ section.settings.button }}
      </a>
    {% endif %}
  </div>

</div>


<style>
.article-card-wrapper:hover img {
  transform: scale(1.05);
}
.article-card-wrapper:hover {
  transform: translateY(-4px);
  box-shadow: 0 6px 16px rgba(0,0,0,0.15);
}
</style>


{% schema %}
{
  "name": "お知らせ",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "セクションタイトル",
      "default": "お知らせ"
    },
    {
      "type": "text",
      "id": "button",
      "label": "ボタンのテキスト"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "ボタンリンク先"
    }
  ],
  "presets": [
    {
      "name": "お知らせセクション",
    }
  ]
}
{% endschema %}
