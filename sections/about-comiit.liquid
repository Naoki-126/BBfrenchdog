
<section class="about-commitment">
  <div class="page-inner">
    <div class="page-contents">
      <div class="about-com__titleArea">
        <h2 class="about-message"><span class="about-message__span">{{ section.settings.title-1 }}</span>{{ section.settings.title-2 }}</h2>
      </div>
      <div class="about-com__contents">
        <div class="about-com__content">
          <div class="about-com__left">
            <div class="about-com__imgArea">
            {% for block in section.blocks %}
                {% if block.settings.image %}
                  <img src="{{ block.settings.image | image_url: width: 576 }}" class="about-com__img" alt="{{ block.settings.image.alt | default: '画像1' | escape }}">
                  {% else %}
                  <img src="{{ 'no-image.png' | asset_url }}" class="top-fv__img" alt="代替画像">
                {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="about-com__right">
            <div class="about-com__rightArea">
              <div class="about-com__ttlArea">
                <div class="about-com__number">01</div>
                <h3 class="about-com__title">遊びへのこだわり</h3>
              </div>
              <div class="about-com__textArea">
                <div class="about-message__text">文章が入ります</div>
              </div>
              <div class="about-com__bottom">
                <div class="about-message__text">こだわり</div>
              </div>
              <div class="about-com__btnArea">
                <button class="c-btn__about">詳しく見る</button>
              </div>
            </div>
          </div>
        </div>
        <div class="about-com__content">
          <div class="about-com__left">
            <div class="about-com__imgArea">
              {% for block in section.blocks %}
                {% if block.settings.image-2 %}
                  <img src="{{ block.settings.image-2 | image_url: width: 576 }}" class="about-com__img" alt="{{ block.settings.image.alt | default: '画像2' | escape }}">
                  {% else %}
                  <img src="{{ 'no-image.png' | asset_url }}" class="top-fv__img" alt="代替画像">
                {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="about-com__right">
            <div class="about-com__rightArea">
              <div class="about-com__ttlArea">
                <div class="about-com__number">02</div>
                <h3 class="about-com__title">品質のこだわり</h3>
              </div>
              <div class="about-com__textArea">
                <div class="about-message__text">文章が入ります</div>
              </div>
              <div class="about-com__bottom">
                <div class="about-message__text">こだわり</div>
              </div>
              <div class="about-com__btnArea">
                <button class="c-btn__about">詳しく見る</button>
              </div>
            </div>
          </div>
        </div>
        <div class="about-com__content">
          <div class="about-com__left">
            <div class="about-com__imgArea">
              {% for block in section.blocks %}
                {% if block.settings.image-3 %}
                  <img src="{{ block.settings.image-3 | image_url: width: 576 }}" class="about-com__img" alt="{{ block.settings.image.alt | default: '画像2' | escape }}">
                  {% else %}
                  <img src="{{ 'no-image.png' | asset_url }}" class="top-fv__img" alt="代替画像">
                {% endif %}
              {% endfor %}
              </div>
          </div>
          <div class="about-com__right">
              <div class="about-com__rightArea">
                <div class="about-com__ttlArea">
                  <div class="about-com__number">03</div>
                  <h3 class="about-com__title">フードへのこだわり</h3>
                </div>
              <div class="about-com__textArea">
                <div class="about-message__text">文章が入ります</div>
              </div>
              <div class="about-com__bottom">
                <div class="about-message__text">こだわり</div>
              </div>
              <div class="about-com__btnArea">
                <button class="c-btn__about">詳しく見る</button>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "aboutコミット",
  "tag": "section",
  "class": "about__com",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id":"title-1",
      "label": "強調タイトル",
      "default": "B&BFRENCH　3"
    },
    {
      "type": "text",
      "id":"title-2",
      "label": "後半タイトル",
      "default": "つのこだわり"
    },
    {
      "type": "image_picker",
      "id":"image",
      "label": "画像"
    },
    {
      "type": "text",
      "id":"message-title",
      "label": "メッセージタイトル"
    },
    {
      "type": "textarea",
      "id":"message-text",
      "label": "メッセージ本文"
    }
  ],
  "blocks": [
    {
      "type": "image",
      "name": "画像",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像1"
        },
        {
          "type": "image_picker",
          "id": "image-2",
          "label": "画像-2"
        },
        {
          "type": "image_picker",
          "id": "image-3",
          "label": "画像-3"
        },
      ]
    }
  ],
  "presets": [
    {
      "name":"アバウトコミット"
    }
  ]
}
{% endschema %}
