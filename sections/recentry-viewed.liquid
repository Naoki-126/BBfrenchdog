{% assign limit = section.settings.limit | default: 4 %}

<section class="recently-viewed">
  <div class="page-inner">
    <h2 class="section-title">{{ section.settings.title }}</h2>
    <ul class="recently-viewed__list" id="recently-viewed-list">
      <!-- JSでここに商品が差し込まれます -->
    </ul>
  </div>
</section>

<style>
  .recently-viewed__list {
  display: flex;
  gap: 16px;
  flex-wrap: wrap;
  list-style: none;
  padding: 0;
}
.recently-viewed__item {
  width: 200px;
}
.recently-viewed__item img {
  width: 100%;
  border-radius: 8px;
}
.recently-viewed__item .title {
  font-size: 14px;
  margin-top: 8px;
  text-align: center;
}
</style>

<script src="{{ 'recently-viewed.js' | asset_url }}" defer></script>

{% schema %}
{
  "name": "recent-checked",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "セクションタイトル",
      "default": "最近チェックした商品"
    },
    {
      "type": "range",
      "id": "limit",
      "label": "表示件数",
      "min": 1,
      "max": 10,
      "step": 1,
      "default": 4
    }
  ],
  "presets": [
    {
      "name": "recent-checked"
    }
  ]
}
{% endschema %}
