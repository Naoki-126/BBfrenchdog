<main class="faq-page" >
  <div class="page-inner">
    <div class="page-contents">
      <div class="breadcrumbs-area">
        <nav  role="navigation" aria-label="breadcrumb">
          <ol class="col-breadcrumb">
            <li><a href="{{ routes.root_url }}">ホーム</a></li>
            <li><a href="{{ routes.collections_url }}">コレクション</a></li>
            <li>{{ collection.title }}</li>
          </ol>
        </nav>
      </div>
      <section id="js-faq" class="faq">
        <div class="faq-contents">
          <div class="guide-titleArea">
            <h1 class="guideFv-title">{{ section.settings.title }}</h1>
          </div>

          {% for block in section.blocks %}
            {% assign faq_block = block.settings %}
            <div class="faq-content">
              <h2 class="faq-title">{{ faq_block.sub-title }}</h2>
              <div class="faq-accordionArea">
                {% for i in (1..6) %}
                  {% assign question_key = "question" | append: i %}
                  {% assign answer_key = "answer" | append: i %}
                  {% assign question = faq_block[question_key] %}
                  {% assign answer = faq_block[answer_key] %}
                  {% if question != blank %}
                    <div class="accordion-q">{{ question }}</div>
                    {% if answer != blank %}
                      <div class="accordion-a">{{ answer }}</div>
                    {% endif %}
                  {% endif %}
                {% endfor %}
              </div>
            </div>
          {% endfor %}
        </div>
      </section>
    </div>
  </div>
</main>

