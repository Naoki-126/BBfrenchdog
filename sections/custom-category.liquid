<section class="pro-checked">
  <div class="page-inner">
    <div class="page-contents">

      <div class="pro-checked__titleArea">
        <h2 class="pro-title">{{ section.settings.title }}</h2>
      </div>
      <ul class="top-cat__items">
        {% for block in section.blocks %}
          <li class="top-cat__item">
            <a href="{{ block.settings.collection.url }}"><img src="{{ block.settings.image | image_url: width: 224 }}" alt="category-img1" class="cat-img"></a>
          </li>
        {% endfor  %}
      </ul>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "カスタムカテゴリー",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id":"title",
      "label": "タイトル"
    },
  ],
  "blocks": [
    {
      "type": "image",
      "name": "カテゴリー画像",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "画像"
        },
        {
          "type": "collection",
          "id": "collection",
          "label": "コレクション",
        },
      ]
    }
  ],
  "presets": [
    {
      "name": "カスタムカテゴリー"
    }
  ]
}
{% endschema %}
