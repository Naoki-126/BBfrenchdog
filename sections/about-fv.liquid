
<section class="about-fv">
  <div class="page-inner">
    <div class="page-contents">
      <div class="about-fv__titleArea">
        <h2 class="section-title__fv">{{ section.settings.title }}</h2>
        <h3 class="section-subTitle">{{ section.settings.subTitle }}</h3>
      </div>
      <div class="about-messageArea">
              <h3 class="about-message">{{ section.settings.message-title }}</h3>
              <div class="about-message__textArea">
                <p class="about-message__text">{{ section.settings.message-text }}</p>
                <p class="about-message__text"></p>
              </div>
            </div>

    </div>
  </div>
</section>

{% schema %}
{
  "name": "aboutFV",
  "tag": "section",
  "class": "about__fv",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "text",
      "id":"title",
      "label": "タイトル"
    },
    {
      "type": "text",
      "id":"subTitle",
      "label": "サブタイトル"
    },
    {
      "type": "text",
      "id":"message-title",
      "label": "メッセージタイトル"
    },
    {
      "type": "textarea",
      "id":"message-text",
      "label": "メッセージ本文"
    }
  ],
  "presets": [
    {
      "name":"アバウトFV",
      "category": "ページ"
    }
  ]
}
{% endschema %}
